@model ClienteModel
@{
    ViewData["Title"] = "Editar Cliente";
}

<div class="text-center">
    <h1 class="display-4">Editar Cliente</h1>
</div>

<form asp-controller="Cliente" asp-action="Editar" method="post">

    <input type="hidden" asp-for="Id" />
    <input type="hidden" asp-for="Ativo" />
    <div class="form-group">
        <label for="nomeUserView">Nome</label>
        <input type="text" asp-for="Nome" class="form-control" placeholder="Digite o nome">
        @Html.ValidationMessageFor(x => x.Nome)
    </div>
    <div class="form-group">
        <label for="nomeUserView">Email</label>
        <input type="text" asp-for="Email" class="form-control" placeholder="Digite o e-mail">
        @Html.ValidationMessageFor(x => x.Email)
    </div>
    <div class="form-group">
        <label for="nomeUserView">CPF</label>
        <input type="text" asp-for="CPF" class="form-control" placeholder="Digite o CPF">
        @Html.ValidationMessageFor(x => x.CPF)
    </div>
    <div class="form-group">
        <label for="nomeUserView">Telefone</label>
        <input type="text" asp-for="Telefone" class="form-control" placeholder="Digite o Telefone">
        @Html.ValidationMessageFor(x => x.Telefone)
    </div>
    <div class="form-group">
        <label for="nomeUserView">DataNascimento</label>
        <input type="date" asp-for="DataNascimento" class="form-control" placeholder="Digite a Data de Nascimento">
        @Html.ValidationMessageFor(x => x.DataNascimento)
    </div>
    <div class="form-group">
        <label for="nomeUserView">Sexo</label>
        <input type="text" asp-for="Sexo" class="form-control" placeholder="Digite o Sexo">
        @Html.ValidationMessageFor(x => x.Sexo)
    </div>
    <div class="form-group">
        <label for="nomeUserView">Senha</label>
        <input type="text" asp-for="Senha" class="form-control" placeholder="Digite a senha">
        @Html.ValidationMessageFor(x => x.Senha)
    </div>

    <button type="submit" class="btn btn-primary btn-block">Editar</button>
    <a class="btn btn-secondary btn-block" asp-controller="Cliente" asp-action="Index" role="button">Voltar</a>
</form>