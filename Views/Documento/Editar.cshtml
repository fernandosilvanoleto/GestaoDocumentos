@model DocumentoModel
@{
    ViewData["Title"] = "Editar Documentos";
}

<div class="text-center">
    <h1 class="display-4">Editar Documentos</h1>
</div>

<form asp-controller="Documento" asp-action="Editar" method="post">

    <input type="hidden" asp-for="Id" />
    <div class="form-group">
        <label for="nomeUserView">Nome</label>
        <input type="text" asp-for="Nome" class="form-control" placeholder="Digite o nome">
        @Html.ValidationMessageFor(x => x.Nome)
    </div>
    <div class="form-group">
        <label for="nomeUserView">Descrição</label>
        <input type="text" asp-for="Descricao" class="form-control" placeholder="Digite a descrição">
        @Html.ValidationMessageFor(x => x.Descricao)
    </div>
    <div class="form-group">
        <label for="nomeUserView">TipoDocumento</label>
        <input type="text" asp-for="TipoDocumento" class="form-control" placeholder="Digite o tipo de documento">
        @Html.ValidationMessageFor(x => x.TipoDocumento)
    </div>

    <button type="submit" class="btn btn-primary btn-block">Editar</button>
    <a class="btn btn-secondary btn-block" asp-controller="Documento" asp-action="Index" role="button">Cancelar</a>

</form>