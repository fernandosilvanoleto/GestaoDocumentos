@model BibliotecarioModel
@{
    ViewData["Title"] = "Adicionar Bibliotecário";
}

<div class="text-center">
    <h1 class="display-4">Adicionar Bibliotecário</h1>
</div>


<form asp-controller="Bibliotecario" asp-action="Adicionar" method="post">
    <div class="form-group">
        <label for="nomeUserView">Nome</label>
        <input type="text" asp-for="Nome" class="form-control" placeholder="Digite o nome">
        @Html.ValidationMessageFor(x => x.Nome)
    </div>
    <div class="form-group">
        <label for="nomeUserView">Email</label>
        <input type="text" asp-for="Email" class="form-control" placeholder="Digite o e-mail">
        @Html.ValidationMessageFor(x => x.Email)
    </div>
    <div class="form-group">
        <label for="nomeUserView">Senha</label>
        <input type="text" asp-for="Senha" class="form-control" placeholder="Digite a senha">
        @Html.ValidationMessageFor(x => x.Senha)
    </div>

    <button type="submit" class="btn btn-primary btn-block">Editar</button>
    <a class="btn btn-danger btn-block" asp-controller="Bibliotecario" asp-action="Index" asp-route-todosBibliotecarios="0" role="button">Voltar</a>
</form>